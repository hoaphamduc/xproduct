@model Xproduct.Models.Dto.DtoUser
@{
    Layout = null;
}
@Styles.Render("~/Contents/profile-styles.css")

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Hồ sơ cá nhân</title>
    <link href='https://unpkg.com/boxicons@2.1.4/css/boxicons.min.css' rel='stylesheet'>

    <link href='https://fonts.googleapis.com/css?family=Roboto' rel='stylesheet'>
    <!-- jQuery -->
    <script src="https://code.jquery.com/jquery-3.6.4.min.js"></script>
    <!-- Slick Carousel -->
    <link rel="stylesheet" type="text/css" href="https://cdnjs.cloudflare.com/ajax/libs/slick-carousel/1.8.1/slick.css" />
    <link rel="stylesheet" type="text/css" href="https://cdnjs.cloudflare.com/ajax/libs/slick-carousel/1.8.1/slick-theme.css" />
    <script type="text/javascript" src="https://cdnjs.cloudflare.com/ajax/libs/slick-carousel/1.8.1/slick.min.js"></script>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/css/bootstrap.min.css" rel="stylesheet">
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/js/bootstrap.bundle.min.js"></script>
    <script src="https://cdn.jsdelivr.net/npm/sweetalert2@10"></script>

</head>
</head>
<body>
    <div class="sidebar">
        <div class="logo-content">
            <btn id="btn"></btn>
            <img src="~/source-img/logo-tong-quan.png" class="logo">
        </div>
        <div class="mot_duong_ke"></div>
        <ul class="nav_list">
            <li class="selected">
                <a href="@Url.Action("Index","User")">
                    <div class="highlight active"></div>
                    <img src="~/source-img/Group 20895.png" class="icon">
                    <span class="links_name active">Tổng quan</span>
                </a>
            </li>
            <li>
                <a href="product.html">
                    <div class="highlight"></div>
                    <img src="~/source-img/Group 20867-off.png" class="icon">
                    <span class="links_name">Product</span>
                </a>
            </li>
            <li>
                <a href="thong-ke.html">
                    <div class="highlight"></div>
                    <img src="~/source-img/Group 20872-off.png" class="icon">
                    <span class="links_name">Thống kê</span>
                </a>
            </li>
            <li>
                <a href="thiet-lap.html">
                    <div class="highlight"></div>
                    <img src="~/source-img/Group 20873-off.png" class="icon">
                    <span class="links_name">Thiết lập</span>
                </a>
            </li>
        </ul>
    </div>
    <div class="home_content">
        <div class="tool_bar">
            <button class="question" onclick="goToSupportPage()"></button>
            <button class="notification" onclick="goToNotificationPage()"></button>
            <button class="info_button">
                <div class="user_info">
                    <img class="user_avt" src="~/source-img/avt-icon.png">
                    <span class="username">Admin</span>
                    <img class="down" src="~/source-img/down.png">
                </div>
            </button>
        </div>
        <div class="user_manager hidden">
            <div class="user_info">
                <img class="show_avt" src="~/source-img/Group 22934.png">
                <div class="user_name_and_mail">
                    <span class="name"><b>Admin</b></span><br>
                    <span class="mail">Email: admin@gmail.com</span>
                </div>
            </div>
            <ul class="function_list">
                <li>
                    <a href="ho-so-ca-nhan.html">
                        <img src="~/source-img/Group 21339.png" class="function_img" id="btn1">
                        <span class="function_text">Hồ sơ cá nhân</span>
                    </a>
                </li>
                <li>
                    <a href="doi-mat-khau.html">
                        <img src="~/source-img/Group 19044.png" class="function_img" id="btn2">
                        <span class="function_text">Đổi mật khẩu</span>
                    </a>
                </li>
                <li>
                    <a href="ho-tro.html">
                        <img src="~/source-img/question.png" class="function_img">
                        <span class="function_text">Hỗ trợ</span>
                    </a>
                </li>
                <li>
                    <a href="nang-cap-tai-khoan.html">
                        <img src="~/source-img/Group 22960.png" class="function_img">
                        <span class="function_text">Nâng cấp tài khoản</span>
                    </a>
                </li>
                <li>
                    <a href="index.html">
                        <img src="~/source-img/Group 22959.png" class="function_img">
                        <span class="function_text">Đăng xuất</span>
                    </a>
                </li>
            </ul>
        </div>
        <div class="tool_bar_2">
            <span class="title"><b>Hồ sơ cá nhân</b></span>
            <button type="button" id="cancel"></button>
            <button type="button" id="save"></button>
        </div>
        <button class="info_option" onclick="showInfoPage()"><b>Thông tin</b></button>
        <button class="info_option_2" onclick="showWorkPage()"><b>Công việc</b></button>
        <div class="mot_duong_ke"></div>
        <div class="containerr page show" id="infoPage">
            <div class="row">
                <div class="col-sm" style="display: inline-block;">
                    <div class="user_info_container">
                        <img src="source-img/IMG.png" class="user_big_avt">
                        <span id="span_1"><b>Admin</b></span>
                        <span id="span_2">admin@gmail.com</span>
                    </div>
                </div>
                <form id="info_form" onclick="">
                    <div class="row">
                        <div class="col-sm" id="col_1">
                            <div class="input-info-1">
                                <label for="username" class="label">Tên truy cập: <p class="redtext">*</p></label>
                                <input type="text" name="username" class="input gray_bg" value="admin" readonly>
                            </div>
                            <div class="input-info">
                                <label for="username" class="label">Email: <p class="redtext">*</p></label>
                                <input type="text" name="username" class="input gray_bg" value="admin@gmail.com" readonly>
                            </div>
                            <div class="input-info">
                                <label for="username" class="label">Họ và tên: <p class="redtext">*</p></label>
                                <input type="text" name="username" class="input gray_bg" value="Mèo Văn Béo" readonly>
                            </div>
                            <div id="datepicker" class="input-info" style="position: relative;">
                                <label for="username" class="label">Ngày sinh: </label>
                                <input type="date" name="username" class="input"
                                       @*data-date-format="dd-mm-yy"*@ 
                                        value="@(ViewBag.dateFrom?.ToString("yyyy-MM-dd"))
                                       readonly>
                                <button type="button" id="select_date"></button>
                            </div>

                            <div class="input-info-2">
                                <label for="address" class="label">Địa chỉ: </label>
                                <input type="text" name="address" class="input" id="address" placeholder="">
                            </div>
                            <div class="gender">
                                <span id="text_gender">Giới tính: </span>
                                <input type="radio" name="gender" value="male" id="radio_male">
                                <label for="male" id="label_male">Nam</label>
                                <input type="radio" name="gender" value="female" id="radio_female">
                                <label for="female" id="label_female">Nữ</label>
                            </div>
                        </div>
                        <div class="col-sm" id="col_2">
                            <div class="input-info-3">
                                <label for="phone" class="label">Số điện thoại: </label>
                                <input type="text" name="phone" class="input" id="phone" placeholder="">
                            </div>
                            <div class="input-info-4">
                                <label for="idCard" class="label">Số CMND/CCCD: </label>
                                <input type="text" name="idCard" class="input" id="idCard" placeholder="">
                            </div>
                            <div class="input-info-4">
                                <label for="dropdown" class="label">Phòng ban:</label><br>
                                <select id="dropdown">
                                    <option value="option1">-- Phòng ban --</option>
                                    <option value="option2">Phòng 1</option>
                                    <option value="option3">Phòng 2</option>
                                    <option value="option3">Phòng 3</option>
                                    <option value="option3">Phòng 4</option>
                                    <option value="option3">Phòng 5</option>
                                </select>
                            </div>
                            <div class="input-info-4">
                                <label for="dropdown_2" class="label">Chức vụ: </label>
                                <select id="dropdown_2">
                                    <option value="option1">Quản lí dự án</option>
                                    <option value="option2">Dev</option>
                                    <option value="option3">Dev lỏ</option>
                                    <option value="option3">BA</option>
                                    <option value="option3">Tester</option>
                                    <option value="option3">Intern</option>
                                </select>
                            </div>
                        </div>
                    </div>
                </form>
            </div>
        </div>
        <div id="workPage" class="page">
        </div>
    </div>
    <script src="https://code.jquery.com/jquery-3.6.1.min.js" integrity="sha256-o88AwQnZB+VDvE9tvIXrMQaPlFFSUTR+nldQm1LuPXQ=" crossorigin="anonymous"></script>
    <script src="https://cdnjs.cloudflare.com/ajax/libs/bootstrap-datepicker/1.9.0/js/bootstrap-datepicker.min.js"></script>
    <script src="~/Contents/profile.js"></script>
    <script src="https://cdn.jsdelivr.net/npm/popper.js@1.12.9/dist/umd/popper.min.js" integrity="sha384-ApNbgh9B+Y1QKtv3Rn7W3mgPxhU9K/ScQsAP7hUibX39j7fakFPskvXusvfa0b4Q" crossorigin="anonymous"></script>
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@4.0.0/dist/js/bootstrap.min.js" integrity="sha384-JZR6Spejh4U02d8jOt6vLEHfe/JQGiRRSQQxSfFWpi1MquVdAyjUar5+76PVCmYl" crossorigin="anonymous"></script>
</body>
</html>